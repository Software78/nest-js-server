# Copy this file to .env and update the values

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your-very-strong-postgres-password-here
DB_NAME=nestjs_db

# MongoDB Configuration
MONGO_URI=mongodb://admin:your-very-strong-mongo-password-here@localhost:27017/nestjs_db?authSource=admin
MONGO_DB_NAME=nestjs_db

# Redis Configuration
REDIS_URI=redis://localhost:6379
REDIS_PASSWORD=your-very-strong-redis-password-here
REDIS_DB=0

# JWT Configuration
# IMPORTANT: Generate a cryptographically secure random string of at least 64 characters
# You can use: openssl rand -base64 64
JWT_SECRET=your-cryptographically-secure-random-string-64-characters-minimum

# Application
PORT=3000
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs

# SMTP Configuration (optional - if not configured, OTPs will be logged instead)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourapp.com

# Feature Flags (set to 'true' to skip specific services)
# SKIP_DB=true
# SKIP_MONGO=true
# SKIP_REDIS=true

# Security Configuration
# Rate limiting (requests per minute)
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_AUTH=10
RATE_LIMIT_REGISTER=5
RATE_LIMIT_LOGIN=5
RATE_LIMIT_PASSWORD_RESET=3

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
PRODUCTION_ORIGINS=https://yourdomain.com